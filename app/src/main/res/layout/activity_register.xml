<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Đăng ký tài khoản"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="6dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Avatar + nút chọn ảnh -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/avatarIv"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@mipmap/ic_launcher"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                            android:contentDescription="Avatar"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPickAvatar"
                            android:text="Chọn ảnh"
                            style="@style/Widget.QuizApp.OutlinedButton"
                            android:layout_marginStart="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Họ tên -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:hint="Họ và tên"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:startIconDrawable="@drawable/ic_person_24">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fullNameEt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Ngày sinh (click để chọn ngày) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:hint="Ngày sinh (dd/MM/yyyy)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:startIconDrawable="@drawable/ic_calendar_24">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/dobEt"
                            android:focusable="false"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Số điện thoại -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:hint="Số điện thoại"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:startIconDrawable="@drawable/ic_phone_24">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phoneEt"
                            android:inputType="phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:hint="Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:startIconDrawable="@drawable/ic_email_24">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/emailEt"
                            android:inputType="textEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Mật khẩu -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:hint="Mật khẩu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:startIconDrawable="@drawable/ic_lock_24"
                        app:endIconMode="password_toggle">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/passEt"
                            android:inputType="textPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Chọn vai trò -->
                    <TextView
                        android:text="Bạn là:"
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RadioGroup
                        android:id="@+id/roleGroup"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rbStudent"
                            android:text="Học viên"
                            android:checked="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rbTeacher"
                            android:text="Giảng viên"
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>

                    <!-- Nút Đăng ký (xử lý ở bước sau) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRegister"
                        android:text="Tạo tài khoản"
                        style="@style/Widget.QuizApp.PrimaryButton"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
