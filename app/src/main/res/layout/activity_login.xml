<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_login_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Logo + tiêu đề -->
            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="36dp"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:text="QuizApp • Sign In"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Card chứa form -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="6dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        app:startIconDrawable="@drawable/ic_email_24">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/emailEt"
                            android:inputType="textEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:layout_marginTop="12dp"
                        app:startIconDrawable="@drawable/ic_lock_24"
                        app:endIconMode="password_toggle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/passEt"
                            android:inputType="textPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Hàng tùy chọn -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp">

                        <CheckBox
                            android:id="@+id/showPassCb"
                            android:text="Hiện mật khẩu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/forgotTv"
                            android:text="Quên mật khẩu?"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            android:layout_gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Nút đăng nhập / đăng ký -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/loginBtn"
                        style="@style/Widget.QuizApp.PrimaryButton"
                        android:text="Đăng nhập"
                        android:layout_marginTop="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/registerBtn"
                        style="@style/Widget.QuizApp.SecondaryButton"
                        android:text="Đăng ký tài khoản"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- Divider -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#22000000"/>
                        <TextView
                            android:text="hoặc"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textColor="#66000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#22000000"/>
                    </LinearLayout>

                    <!-- Google -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/googleSignInBtn"
                        android:text="Sign in with Google"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_google_24"
                        app:iconPadding="12dp"
                        app:iconGravity="textStart"
                        app:iconTint="@android:color/transparent"
                        style="@style/Widget.QuizApp.OutlinedButton"/>
                    <TextView
                        android:id="@+id/switchRoleTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Đăng nhập với tư cách Giảng viên"
                        android:textColor="@color/design_default_color_primary_dark"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:text="© 2025 QuizApp"
                android:textColor="@android:color/white"
                android:alpha="0.7"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
