<resources>
    <!-- Nút Primary tím -->
    <style name="Widget.QuizApp.PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:insetTop">12dp</item>
        <item name="android:insetBottom">12dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">@color/quiz_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="elevation">2dp</item>
    </style>

    <!-- Nút Secondary (màu nhạt hơn) -->
    <style name="Widget.QuizApp.SecondaryButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">@color/quiz_primary_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Nút Google viền mỏng -->
    <style name="Widget.QuizApp.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">#33000000</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
