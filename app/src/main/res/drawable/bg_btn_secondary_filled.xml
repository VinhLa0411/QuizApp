<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- bóng nhẹ -->
    <item android:top="2dp">
        <shape>
            <corners android:radius="26dp"/>
            <solid android:color="#22000000"/>
        </shape>
    </item>

    <!-- thân nút -->
    <item>
        <shape>
            <corners android:radius="26dp"/>
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#885B5BFE"
            android:endColor="#885B8BFF"/>
            <stroke android:width="1dp" android:color="#CCB7B7FF"/>
        </shape>
    </item>

</layer-list>
