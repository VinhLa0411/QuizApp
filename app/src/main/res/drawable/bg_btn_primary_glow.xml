<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Glow mờ dưới nút -->
    <item android:top="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="26dp"/>
            <solid android:color="#33000000"/>
        </shape>
    </item>

    <!-- Thân nút gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="26dp"/>
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#6B5BFF"
                android:endColor="#4C3AEF"/>
            <padding android:left="10dp" android:right="10dp" android:top="2dp" android:bottom="2dp"/>
        </shape>
    </item>

</layer-list>
